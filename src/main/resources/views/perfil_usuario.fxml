<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.Cursor?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mpm.speakupdesk.controller.PerfilUsuarioController"
      spacing="10"
      style="-fx-padding: 20;
      -fx-background-color: white"
      stylesheets="@../css/dashboard.css">
    <Label alignment="CENTER" text="Perfil de Usuario" style="-fx-font-size: 20px; -fx-text-fill: #4e73df; -fx-font-weight: bold; " />
    <VBox spacing="5">
        <Label fx:id="lblNombreCompleto"/>
        <Separator orientation="HORIZONTAL" style="-fx-pref-width: 50px">
            <VBox.margin><Insets left="10.0" right="10.0" /></VBox.margin>
        </Separator>
        <Label fx:id="lblEmail"/>
        <Separator orientation="HORIZONTAL" style="-fx-pref-width: 50px">
            <VBox.margin><Insets left="10.0" right="10.0" /></VBox.margin>
        </Separator>
        <Label fx:id="lblRol"/>
        <Separator orientation="HORIZONTAL" style="-fx-pref-width: 50px">
            <VBox.margin><Insets left="10.0" right="10.0" /></VBox.margin>
        </Separator>
        <Label fx:id="lblColegio"/>
    </VBox>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cerrar" onAction="#cerrarModal" styleClass="btn-reporte">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>
</VBox>
